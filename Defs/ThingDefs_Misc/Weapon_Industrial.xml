<Defs>


  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>MJArmory_NockPistol</defName>
    <label>knock pistol</label>
    <description>A heavy two-shot smoothbore pistol favored by the Rim's most desperate. Capable of functioning in all but the most punishing conditions, it has no moving parts, reliant on a crude voltaic cell for ignition.</description>
    <graphicData>
      <texPath>Weapons/NockPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.4</drawSize>
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <soundInteract>Interact_Revolver</soundInteract>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <displayPriority>399</displayPriority>
    </recipeMaker>
    <weaponTags>
      <li>RangedLight</li>
    </weaponTags>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
    <tradeTags>
      <li>WeaponRanged</li>
    </tradeTags>
    <statBases>
      <WorkToMake>2500</WorkToMake>
      <Mass>1.1</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>2.6</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>MJArmory_Bullet_NockPistol</defaultProjectile>
        <warmupTime>0.2</warmupTime>
        <range>25.9</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>8</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Biocodable"/>
    </comps>
  </ThingDef>
